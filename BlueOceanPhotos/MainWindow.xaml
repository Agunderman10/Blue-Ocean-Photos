<Window x:Class="BlueOceanPhotos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueOceanPhotos"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Background>
        <ImageBrush Opacity=".6">
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="Images/BlueOceanSplashScreen.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    
    <Grid Opacity=".3">
        <Menu>
            <MenuItem Header="File">
                <Separator/>
                <MenuItem Header="Open Image"/>
                <Separator/>
                <MenuItem Header="Close Image"/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="Edit">
                <Separator/>
                <MenuItem Header="Crop Image.."/>
                <Separator/>
                <MenuItem Header="Rotate Image.."/>
                <Separator/>
            </MenuItem>
        </Menu>
    </Grid>
    
</Window>
